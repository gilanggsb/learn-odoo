<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="email_template_product_expires_soon_reminder" model="mail.template">
            <field name="name">The product will expire soon</field>
            <field name="model_id" ref="product.model_product_product"/>
            <field name="email_from">${(object.create_uid.partner_id.email_formatted or user.email_formatted) |safe}</field>
            <field name="subject">Product (${object.display_name or object.name or 'n/a' }) will expire soon.</field>
            <!-- <field name="partner_to">${object.partner_id.id}</field> -->
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear 
                        % if object.activity_user_id:
                            ${object.activity_user_id.partner_id.name}
                        % else:
                            ${object.create_uid.partner_id.name}
                        <br/><br/>
                        Here is a reminder that the product '<strong>${object.display_name or object.name}</strong>' will expire 
                        
                        % if object.expired_date:
                            on <strong>${format_date(object.expired_date)}</strong>.
                        % else:
                            <strong>soon</strong>.
                        % endif
                        <br/>
                        Will the product period be extended or discontinued (inactive)?
                        <br/><br/>
                        Best regards,
                    </p>
                </div>
            </field>
            <field name="lang">${object.create_uid.partner_id.lang}</field>
            <field name="auto_delete" eval="True"/>
        </record>


        <record id="email_template_product_expired_reminder" model="mail.template">
            <field name="name">The product has expired</field>
            <field name="model_id" ref="product.model_product_product"/>
            <field name="email_from">${(object.create_uid.partner_id.email_formatted or user.email_formatted) |safe}</field>
            <field name="subject">Product (${object.display_name or object.name or 'n/a' }) has expired.</field>
            <!-- <field name="partner_to">${object.partner_id.id}</field> -->
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear 
                        % if object.activity_user_id:
                            ${object.activity_user_id.partner_id.name}
                        % else:
                            ${object.create_uid.partner_id.name}
                        <br/><br/>
                        Here is a reminder that product '<strong>${object.display_name or object.name}</strong>' has expired  
                        % if object.expired_date:
                            on <strong>${format_date(object.expired_date)}</strong>.
                        % endif
                        <br/>
                        If you want to activate product, press 'Activate Product' button on the form and enter next expiration date.
                        <br/><br/>
                        Best regards,
                    </p>
                </div>
            </field>
            <field name="lang">${object.create_uid.partner_id.lang}</field>
            <field name="auto_delete" eval="True"/>
        </record>

    </data>
</odoo>
