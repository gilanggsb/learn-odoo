<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_minimum_stock_report_wizard" model="ir.ui.view">
        <field name="name">Minimum Stock Report</field>
        <field name="model">stock.warehouse.orderpoint.wizard</field>
        <field name="arch" type="xml">
            <form string="Minimum Stock Report">
                <group>
                    <group>
                        <field name="date_report" readonly="1"/>
                    </group>
                </group>
                <footer>
                    <button name="export_xls" string="Export" type="object" class="btn-primary"/>
                    <button special="cancel" string="Cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_minimum_stock_report_wizard" model="ir.actions.act_window">
            <field name="name">Minimum Stock Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.warehouse.orderpoint.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_minimum_stock_report_wizard"/>
            <field name="target">new</field>
    </record>

    <record id="action_report_xlsx" model="ir.actions.report">
        <field name="name">Report Xlsx</field>
        <field name="model">stock.warehouse.orderpoint</field>
        <field name="report_type">xlsx</field>
        <field name="report_name">warehouse_management_system.minimum_stock_report_excel</field>
        <field name="report_file">warehouse_management_system.minimum_stock_report_excel</field>
        <field name="print_report_name">'Report Xlsx'</field>
    </record>
</odoo>